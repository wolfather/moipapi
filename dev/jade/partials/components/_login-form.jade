.form
	form(name='createuser'
		data-ng-submit='home.submitcreateuser(user);')
		
		.error-message(data-ng-show='createuser.fullName.$invalid && createuser.fullName.$dirty') Nome incorreto

		.error-message(data-ng-show='createuser.cpf.$invalid && createuser.cpf.$dirty') CPF incorreto

		fieldset.form-fieldset
			legend

			input.form-input(type='text'
				placeholder='Nome completo'
				maxlength='200'
				data-ng-model='user.fullName'
				data-ng-class=''
				data-ng-required='true'
				name='fullName')


			input.form-input(type='email'
				placeholder='Email'
				maxlength='200'
				data-ng-model='user.email'
				data-ng-class=''
				data-ng-required='true'
				data-ng-pattern='home.validate.email'
				name='email')

			.row
				input.form-input.medium-up-5(type='text'
					placeholder='CPF'
					maxlength='14'
					data-ng-model='user.cpf'
					data-ng-class=''
					data-ng-required='true'
					data-ng-pattern='home.validate.cpf'
					name='cpf')
				
				
				input.form-input.medium-up-5(type='text'
					placeholder='Celular'
					maxlength='15'
					data-ng-model='user.cellphone'
					data-ng-class=''
					data-ng-required='true'
					data-ng-pattern='home.validate.cellPhone'
					name='cellphone')
			

			.row.input-pass-group
				input.form-input.medium-up-6(type='password'
					placeholder='Senha'
					maxlength='10'
					data-ng-model='user.pass'
					data-ng-class='form-input'
					data-ng-required='true'
					name='pass')
				
				
				input.form-input.medium-up-6(type='password'
					placeholder='Confirme sua senha'
					maxlength='10'
					data-ng-model='user.confirmpass'
					data-ng-class='form-input'
					data-ng-required='true'
					name='confirmpass')


			.row
				label.form-input-label-agreement Li e concordo com 
					em.form-input-emphasys termos de uso
					input.form-input.form-input-checkbox(type='checkbox'
						data-ng-model='user.agree'
						data-ng-class='form-input'
						data-ng-required='true'
						name='agree')


			input.form-submit.medium-up-9(type='submit'
				data-ng-class=''
				value='CADASTRAR'
				data-ng-submit='home.submitcreateuser(user);'
				data-ng-disabled='createuser.$invalid')
