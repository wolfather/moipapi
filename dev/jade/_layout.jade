include ./_variables.jade
include ./_mixins.jade
-var environment = 1 //0 production - 1 development
-var filesPath = environment ? server+'/build/' : server+'/dev/'

doctype html
html(lang='pt-BR')
	head
		meta(charset='utf-8')
		meta(name='viewport'
			content='width=device-width, initial-scale=1')

		title App

		link(rel='stylesheet'
			href='#{filesPath}css/app.main.css'
			type='text/css')

		body(ng-app='app')

			header.header-row

				a.logo-link(href='#/home')
					img.logo-image(src='#{server}/assets/images/products/large-1.jpg')

			.main(data-role='window')

			block content






		block inputScripts

		+onescript()




		#fb-root
		script(type='text/javascript').
			(function(d, s, id) {
				var js, fjs = d.getElementsByTagName(s)[0];
				if (d.getElementById(id)) return;
				js = d.createElement(s); js.id = id;js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5";fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
